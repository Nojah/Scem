<h1>New organism</h1>

<% form_for(@organism) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p> 
    <%= f.label :description_short %><br />
    <%= f.text_area :description_short %>
  </p>
  <p>
    <%= f.label :manager_name %><br />
    <%= f.text_field :manager_name %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', organisms_path %>