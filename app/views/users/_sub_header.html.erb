<ul class='tabs'>
<li><% if controller_name != 'users' || controller.action_name=='edit' %><%= link_to("Profil", @user) %><% else %>Profil<% end %></li>
<% if @user.posts.size > 0 || current_user_equal(@user) %><li><% if controller_name != 'posts' %><%= link_to("Blog", user_posts_path(:user_id => @user.id)) %><% else %>Blog<% end %></li><% end %>
<li><% if controller_name != "participations" %><%= link_to("Participations", user_participations_path(:user_id => @user.id, :role =>:sure)) %><% else %>Participations<% end %></li>
<% if current_user_equal(@user) %><li><% if (controller_name != 'users' || controller.action_name!='edit') %><%= link_to("Edit", edit_user_path(@user)) %><% else %>Edit<% end %></li><% end %>
</ul>
