<div class="term box">
  <% fields_for_term(term) do |term_form| %>
    <% @term = term %>
    <p>
      <%= term_form.label :start %> <% if !error_message_on(:term, :start).blank? %>(Please check the format of the date and that it's not already past)<% end %><br />
  <%#= term_form.datetime_select :start %>
      
      <%= term_form.calendar_date_select :start, :embedded => false,:year_range => [0.years.ago, 2.years.from_now] %>
    </p>
    <p>
      <%= term_form.label :end %> <% if !error_message_on(:term, :end).blank? %>(Please check the format of the date and that it's not already past)<% end %><br />
  <%#= term_form.datetime_select :end %>
      <%= term_form.calendar_date_select :end, :embedded => false,:year_range => [0.years.ago, 2.years.from_now] %>
    </p>
    <p>
        <%= error_message_on :term, :description %>
  <%#= term_form.label :description %><br />
      <%= fckeditor_textarea(:term, :description, :toolbarSet => 'Simple', :width => '100%', :height => '400px') %>
    </p>

    <p>
      <%= link_to_function "remove", "$(this).up('.term').remove()" %>
    </p>

  <% end %>
</div>