<h1>Showing users participating to</h1>
<h2>"<%=h  @event.name %>"</h2>

<p>
  <b>Start:</b>
  <%=h @term.start %>
</p>

<p>
  <b>End:</b>
  <%=h @term.end %>
</p>

<% form_tag term_participations_path, :method => 'get' do %>
  <p>
    <%=  hidden_field_tag 'role', params[:role] %>

    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<%= link_to "Show sure participants (#{@term.sure_participants.size})", term_participations_path(:term_id => @term.id, :role =>:sure) %> |
<%= link_to "Show may be participants (#{@term.maybe_participants.size})", term_participations_path(:term_id => @term.id, :role =>:may_be) %> |
<%= link_to "Show do not participants (#{@term.not_participants.size})", term_participations_path(:term_id => @term.id, :role =>:not) %>
<br />

<%= render :partial => "/users/users_list" %>

<%= link_to 'Back', event_path(@event) %>