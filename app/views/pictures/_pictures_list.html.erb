<div id="results">
  <table>
    <tr>
      <th>Preview</th>
      <th>Parent</th>
      <th>Description</th>
      <th>Creator</th>
    </tr>

    <% @pictures.each do |picture| %>
      <tr>
        <td><%=  link_to(image_tag(picture.attached.url(:small)), picture) %></td>
        <td>From <%= picture.parent_type %> <%=  link_to(picture.get_parent_object.name, picture.get_parent_object) %></td>
        <td><%=h picture.description %></td>
        <td><%= get_user_name_or_pseudo_link(picture.creator_id) %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
      </tr>
    <% end %>
  </table>

  <br />

  <%= will_paginate @pictures %>
</div>