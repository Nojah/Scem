<%= render :partial => "/users/header" %>

<% form_tag user_memberships_path, :method => 'get' do %>
  <p>
    <%#=  hidden_field_tag 'user_id', @user.id %>
    <%=  hidden_field_tag 'role', params[:role] %>

    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<ul class='tabs'>
  <li><% if params[:role]!='member' %><%= link_to "member of #{@user.is_member_of.size} organisms", user_memberships_path %><% else %>member of <%= @user.is_member_of.size %> organisms<% end %></li>
  <li><% if params[:role]!='moderator' %><%= link_to "moderator of #{@user.is_moderator_of.size} organisms", user_memberships_path(:role =>:moderator) %><% else %>moderator of <%= @user.is_moderator_of.size %> organisms<% end %></li>
  <li><% if params[:role]!='admin' %><%= link_to "administrator of #{@user.is_admin_of.size} organisms", user_memberships_path(:role =>:admin) %><% else %>administrator of <%= @user.is_admin_of.size %> organisms<% end %></li>
</ul>

<%= render :partial => "/organisms/organisms_list" %>